{
  "name": "engineers-manual",
  "version": "1.0.0",
  "description": "A field manual for software engineers",
  "author": "Tommy A. Caruso Sr.",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:11ty\" \"npm run dev:css\"",
    "dev:11ty": "eleventy --serve --watch",
    "dev:css": "tailwindcss -i ./src/assets/css/main.css -o ./_site/assets/css/main.css --watch",
    "build": "npm run build:css && npm run build:11ty && npm run build:search",
    "build:11ty": "eleventy",
    "build:css": "tailwindcss -i ./src/assets/css/main.css -o ./_site/assets/css/main.css --minify",
    "build:search": "pagefind --site _site",
    "preview": "npx serve _site"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.0.0",
    "@tailwindcss/typography": "^0.5.15",
    "concurrently": "^9.1.0",
    "markdown-it-anchor": "^9.2.0",
    "pagefind": "^1.3.0",
    "tailwindcss": "^3.4.17"
  },
  "dependencies": {
    "markdown-it-footnote": "^4.0.0"
  }
}
