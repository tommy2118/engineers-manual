---
layout: layouts/base.njk
---

<article class="md:grid md:grid-cols-[1fr_200px] md:gap-8 lg:grid-cols-[1fr_220px] lg:gap-12">
  <div>
    {# Field Manual Style Header #}
    <header class="manual-header">
      {% if chapter is defined and chapter > 0 %}
        <p class="manual-header-chapter">Chapter {{ chapter }}</p>
      {% elif part == 0 %}
        <p class="manual-header-chapter">Preamble</p>
      {% endif %}
      <h1 class="manual-header-title">{{ title }}</h1>
      {% if summary %}
        <p class="manual-header-subtitle">{{ summary }}</p>
      {% endif %}
    </header>

    {# Mobile TOC - Collapsible (visible only on small screens) #}
    {% set toc = content | toc %}
    {% if toc.length > 0 %}
      <details class="mobile-toc md:hidden">
        <summary>On this page</summary>
        <nav class="mobile-toc-list" aria-label="Page contents">
          {% for heading in toc %}
            <a href="#{{ heading.id }}" class="{% if heading.level == '3' %}pl-4{% endif %}">
              {{ heading.text }}
            </a>
          {% endfor %}
        </nav>
      </details>
    {% endif %}

    {# Chapter Content #}
    <div class="prose prose-manual max-w-none" data-pagefind-body>
      {{ content | safe }}
    </div>

    {# Chapter Navigation #}
    {% include "partials/chapter-nav.njk" %}
  </div>

  {# Sidebar - On-Page TOC (visible on medium+ screens) #}
  <aside class="hidden md:block">
    {% include "partials/sidebar.njk" %}
  </aside>
</article>
