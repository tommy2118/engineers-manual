<article class="lg:grid lg:grid-cols-[1fr_200px] lg:gap-16">
  <div>
    {# Field Manual Style Appendix Header #}
    <header class="manual-header">
      <p class="manual-header-chapter">Appendix</p>
      <h1 class="manual-header-title">{{ title }}</h1>
    </header>

    {# Appendix Content #}
    <div class="prose prose-manual max-w-none" data-pagefind-body>
      {{ content | safe }}
    </div>
  </div>

  {# Sidebar - On-Page TOC #}
  <aside class="hidden lg:block">
    {% include "partials/sidebar.njk" %}
  </aside>
</article>
