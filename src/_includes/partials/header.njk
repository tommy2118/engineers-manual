{# Field Manual Style Header #}
<header class="manual-topbar">
  <nav class="manual-topbar-inner">
    <div>
      <p class="manual-classification hidden sm:block">UNCLASSIFIED</p>
      <a href="/" class="manual-brand" aria-label="Return to manual cover">
        <span class="hidden sm:inline">{{ site.title }}</span>
        <span class="sm:hidden">TEM</span>
      </a>
      <p class="manual-edition hidden md:block">{{ site.subtitle }}</p>
    </div>

    <div class="manual-topbar-actions">
      <button id="search-toggle" class="manual-search-btn" aria-label="Search manual">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
        </svg>
        <span class="sr-only">Search</span>
      </button>
      <span class="manual-topbar-meta hidden lg:inline">Field Reference</span>
      {# Mobile menu toggle #}
      <button id="mobile-nav-toggle" class="mobile-nav-toggle" aria-label="Open navigation menu" aria-expanded="false">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>
    </div>
  </nav>
</header>

{# Search Modal - Utilitarian Style #}
<div id="search-modal" class="hidden fixed inset-0 bg-manual-950/90 z-50">
  <div class="container mx-auto px-4 py-16 max-w-2xl">
    <div class="bg-manual-50 border-2 border-manual-400 shadow-xl overflow-hidden">
      <div class="flex justify-between items-center p-4 border-b-2 border-manual-300 bg-manual-100">
        <h2 class="font-sans font-bold text-sm uppercase tracking-wide text-manual-800">Search Manual</h2>
        <button id="search-close" class="p-2 hover:bg-manual-200 transition-colors" aria-label="Close search">
          <svg class="w-4 h-4 text-manual-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>
      <div id="search-container" class="p-4"></div>
    </div>
  </div>
</div>
